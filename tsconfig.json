{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "dashboard/src/components/Dashboard/Dashboard.tsx"],
  "exclude": ["node_modules", "dist", "src/_module_2a_backup", "src/**/*.test.ts", "src/**/*.spec.ts"]
}